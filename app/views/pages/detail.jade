extends ../layout

block content
    .container
        .row
            .col-md-7
                embed(src="#{movie.flash}", type="application/x-shockwave-flash", allowFullScreen="true", quality="high", width="700", height="450", align="middle")
                .panel.panel-default
                    .panel-heading
                        h3 评论区
                    .panel-body 
                        ul.media-list
                            each item in comments
                                li.media.row
                                    .pull-left
                                        a.comment(href="#comments", data-cid="#{item._id}",data-tid="#{item.from._id}")
                                            img.thumbnail(src="",style="width:64px;height:64px;")
                                        //- i.glyphicon.glyphicon-user(style="width:64px;height:64rpx;font-size:64rpx;")
                                    .media-body
                                        h4.media-heading #{item.from.name}
                                        p #{item.content}
                                        if item.reply&&item.reply.length>0
                                            each reply in item.reply
                                                .media
                                                    .pull-left
                                                        a.comment(href="#comments", data-cid="#{item._id}",data-tid="#{reply.from._id}")
                                                            img.thumbnail(src="",style="width:64px;height:64px;")
                                                        //- i.glyphicon.glyphicon-user(style="width:64px;height:64rpx;font-size:64rpx;")
                                                    .media-body
                                                        h4.media-heading #{reply.from.name}
                                                            span.text-info &nbsp;回复 &nbsp; #{reply.to.name}:
                                                        p #{reply.content}
                                hr
                    #comments
                        form#commentForm(method="POST",action="/user/comment")
                            input(type="hidden",name="comment[movie]",value="#{movie._id}")
                            input(type="hidden",name="comment[from]",value="#{user._id}")
                            .form-group
                                textarea.form-control(name="comment[content]",row="3")
                            button.btn.btn-primary(type="submit") 提交
                    br
                    br
            .col-md-5
                dl.dl-horizontal
                    dt 电影名字
                    dd= movie.title
                    dt 导演
                    dd= movie.doctor
                    dt 国家
                    dd= movie.country
                    dt 语言
                    dd= movie.language
                    dt 上映年份
                    dd= movie.year
                    dt 简介
                    dd= movie.summary
    script(src="/js/detail.js")